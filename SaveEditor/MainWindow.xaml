<Window x:Class="LM2.SaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LM2.SaveEditor"
        mc:Ignorable="d"
        Title="Luigi's Mansion 2 Save Editor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File" Margin="2">
                <MenuItem Header="_Open..." Click="LoadItem_Click"/>
                <MenuItem Header="_Save" Click="SaveItem_Click"/>
                <MenuItem Header="Save _As..." Click="SaveAsItem_Click"/>
                <MenuItem Header="_Close File" Click="CloseItem_Click"/>
            </MenuItem>
        </Menu>
        <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="No Save File Loaded" FontSize="18"/>
        <TabControl x:Name="mainTabControl" Grid.Row="1" Visibility="Collapsed" d:Visibility="Visible">
            <TabItem Header="Main Game">
                <Grid>
                    <TabControl>
                        <TabItem Header="Missions">
                            <Grid>
                                <ScrollViewer Margin="10">
                                    <StackPanel x:Name="missionStack" Orientation="Vertical"/>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Ghosts">
                            <Grid>

                            </Grid>
                        </TabItem>
                        <TabItem Header="Gems and Treasure">
                            <Grid>

                            </Grid>
                        </TabItem>
                        <TabItem Header="Tower">
                            <Grid>

                            </Grid>
                        </TabItem>
                        <TabItem Header="Advanced">
                            <Grid>
                                <TabControl>
                                    <TabItem Header="Automatic Fields">
                                        <Grid>
                                            
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Unknown Fields">
                                        <Grid>

                                        </Grid>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Title Screen">
                <Grid>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
